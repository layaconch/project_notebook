<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_devops_training_course_tree" model="ir.ui.view">
        <field name="name">devops.training.course.tree</field>
        <field name="model">devops.training.course</field>
        <field name="arch" type="xml">
            <list string="培训课程">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_devops_training_course_form" model="ir.ui.view">
        <field name="name">devops.training.course.form</field>
        <field name="model">devops.training.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Resources">
                            <field name="resource_ids" mode="tree,form"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_devops_training_resource_tree" model="ir.ui.view">
        <field name="name">devops.training.resource.tree</field>
        <field name="model">devops.training.resource</field>
        <field name="arch" type="xml">
            <list string="培训资料">
                <field name="name"/>
                <field name="resource_type"/>
                <field name="course_id"/>
                <field name="url"/>
                <field name="attachment_filename"/>
            </list>
        </field>
    </record>

    <record id="view_devops_training_resource_form" model="ir.ui.view">
        <field name="name">devops.training.resource.form</field>
        <field name="model">devops.training.resource</field>
        <field name="arch" type="xml">
            <form string="Training Resource">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="resource_type"/>
                        <field name="course_id"/>
                        <field name="url" placeholder="External link (video/doc)"/>
                        <field name="attachment" filename="attachment_filename"/>
                        <field name="attachment_filename" invisible="1"/>
                        <field name="knowledge_link" placeholder="Link to knowledge page"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_devops_training_manual_tree" model="ir.ui.view">
        <field name="name">devops.training.manual.tree</field>
        <field name="model">devops.training.manual</field>
        <field name="arch" type="xml">
            <list string="用户手册">
                <field name="name"/>
                <field name="manual_type"/>
                <field name="url"/>
                <field name="attachment_filename"/>
            </list>
        </field>
    </record>

    <record id="view_devops_training_manual_form" model="ir.ui.view">
        <field name="name">devops.training.manual.form</field>
        <field name="model">devops.training.manual</field>
        <field name="arch" type="xml">
            <form string="User Manual">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="manual_type"/>
                        <field name="url" placeholder="External link (optional)"/>
                        <field name="attachment" filename="attachment_filename"/>
                        <field name="attachment_filename" invisible="1"/>
                        <field name="body_markdown" placeholder="Markdown content"/>
                        <field name="description"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_devops_training_course" model="ir.actions.act_window">
        <field name="name">培训课程管理</field>
        <field name="res_model">devops.training.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_devops_training_resource" model="ir.actions.act_window">
        <field name="name">培训资料</field>
        <field name="res_model">devops.training.resource</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_devops_training_manual" model="ir.actions.act_window">
        <field name="name">用户手册</field>
        <field name="res_model">devops.training.manual</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_devops_training_faq_tree" model="ir.ui.view">
        <field name="name">devops.training.faq.tree</field>
        <field name="model">devops.training.faq</field>
        <field name="arch" type="xml">
            <list string="常见问题">
                <field name="sequence" optional="hide"/>
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_devops_training_faq_form" model="ir.ui.view">
        <field name="name">devops.training.faq.form</field>
        <field name="model">devops.training.faq</field>
        <field name="arch" type="xml">
            <form string="FAQ">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="name" string="Question"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="answer" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_devops_training_faq" model="ir.actions.act_window">
        <field name="name">常见问题</field>
        <field name="res_model">devops.training.faq</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
