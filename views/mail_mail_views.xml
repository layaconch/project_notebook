<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mail_mail_tree_notebook" model="ir.ui.view">
        <field name="name">mail.mail.tree.notebook</field>
        <field name="model">mail.mail</field>
        <field name="inherit_id" ref="mail.view_mail_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='subject']" position="after">
                <field name="notebook_id" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
