<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_devops_issue_list" model="ir.ui.view">
        <field name="name">devops.issue.list</field>
        <field name="model">devops.issue</field>
        <field name="arch" type="xml">
            <list string="课题">
                <field name="name"/>
                <field name="requirement_id"/>
                <field name="owner_id"/>
                <field name="priority"/>
                <field name="severity"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_devops_issue_form" model="ir.ui.view">
        <field name="name">devops.issue.form</field>
        <field name="model">devops.issue</field>
        <field name="arch" type="xml">
            <form string="Issue">
                <header>
                    <button name="action_progress" type="object" string="Start" class="btn-secondary"/>
                    <button name="action_resolve" type="object" string="Resolve" class="btn-primary"/>
                    <button name="action_close" type="object" string="Close" class="btn-success"/>
                    <field name="status" widget="statusbar" statusbar_visible="open,in_progress,resolved,closed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="requirement_id"/>
                            <field name="owner_id" options="{'no_create': True}"/>
                            <field name="reporter_id"/>
                        </group>
                        <group>
                            <field name="priority"/>
                            <field name="severity"/>
                            <field name="deadline"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Reproduction">
                            <field name="reproduction_steps" widget="html"/>
                        </page>
                        <page string="Resolution">
                            <field name="resolution" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_devops_issue_search" model="ir.ui.view">
        <field name="name">devops.issue.search</field>
        <field name="model">devops.issue</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="requirement_id"/>
                <filter name="status_open" domain="[('status','=','open')]" string="Open"/>
                <filter name="status_progress" domain="[('status','=','in_progress')]" string="In Progress"/>
            </search>
        </field>
    </record>

    <record id="action_devops_issue" model="ir.actions.act_window">
        <field name="name">课题管理</field>
        <field name="res_model">devops.issue</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
