<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_devops_requirement_list" model="ir.ui.view">
        <field name="name">devops.requirement.list</field>
        <field name="model">devops.requirement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="deadline"/>
            </list>
        </field>
    </record>

    <record id="view_devops_requirement_form" model="ir.ui.view">
        <field name="name">devops.requirement.form</field>
        <field name="model">devops.requirement</field>
        <field name="arch" type="xml">
            <form string="Requirement">
                <header>
                    <button name="action_approve" type="object" string="Approve" class="btn-primary"/>
                    <button name="action_start" type="object" string="Start" class="btn-secondary"/>
                    <button name="action_done" type="object" string="Done" class="btn-success"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="owner_id" options="{'no_create': True}"/>
                            <field name="requester_id"/>
                            <field name="priority"/>
                            <field name="requirement_type"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" widget="text"/>
                        </page>
                        <page string="Issues">
                            <field name="issue_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="owner_id"/>
                                    <field name="priority"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_devops_requirement_search" model="ir.ui.view">
        <field name="name">devops.requirement.search</field>
        <field name="model">devops.requirement</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <filter name="state_draft" domain="[('state','=','draft')]" string="Draft"/>
                <filter name="state_progress" domain="[('state','=','in_progress')]" string="In Progress"/>
            </search>
        </field>
    </record>

    <record id="action_devops_requirement" model="ir.actions.act_window">
        <field name="name">Requirements</field>
        <field name="res_model">devops.requirement</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
