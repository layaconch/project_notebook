<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_devops" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.devops</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-key="devops" string="DevOps">
                    <h2>DevOps</h2>
                    <div class="row mt16 o_setting_container">
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="devops_default_data_source_id" options="{'no_create_edit': True}"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="devops_default_data_source_id"/>
                                    <div class="text-muted">
                                        Default data source used when creating new DevOps notebooks.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
